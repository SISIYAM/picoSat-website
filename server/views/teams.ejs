<div class="table-responsive my-5">
  <div class="message">
    <% if (message.error) { %>
    <div class="alert alert-danger"><%= message.error %></div>
    <% } %> <% if (message.success) { %>
    <div class="alert alert-success"><%= message.success %></div>
    <% } %> <% if (teams && teams.length > 0) { %>
  </div>
  <button
    id="loadInsertModal"
    class="btn btn-sm btn-primary"
    data-bs-toggle="modal"
    data-bs-target="#insertModal"
    data-key="teams"
  >
    Add
  </button>
  <!-- Check if teams exist and have entries -->
  <table id="usersTable" class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>Image</th>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% teams.forEach((team, index) => { %>
      <tr>
        <td><%= ++index %></td>
        <td>
          <img
            src="<%= team.image %>"
            alt="<%= team.teamName %>"
            style="width: 50px; height: auto"
          />
        </td>
        <td><%= team.id %></td>
        <td><%= team.teamName %></td>
        <td><%= team.email %></td>
        <td>
          <button
            value="<%= team.id %>"
            class="btn btn-sm btn-primary loadForm"
            data-bs-toggle="modal"
            data-bs-target="#exampleModalCenter"
            data-key="teams"
          >
            Edit
          </button>
          <a href="/delete/team/<%= team.id %>" class="btn btn-sm btn-danger"
            >Delete</a
          >
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } else { %>

  <!-- If no teams are found, show a message -->
  <div class="alert alert-info">No teams available.</div>
  <button
    id="loadInsertModal"
    class="btn btn-lg btn-primary"
    data-bs-toggle="modal"
    data-bs-target="#insertModal"
    data-key="teams"
  >
    Add
  </button>
  <% } %>
</div>
